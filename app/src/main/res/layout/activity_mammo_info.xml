<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".Who_is_at_high_risk">

    <TextView
        android:id="@+id/message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="الماموجرام"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="الماموجرام هو أشعة سينية اى أشعة اكس للثدى\nتستخدم فى الفحص الروتيني لسرطان الثدى\nللنساء تحديدا بعد سن الـ 40\nتستخدم اشعاع اقل من اشعة اكس\nالماموجرام يستخدم فى الاكتشاف المبكر لسرطان الثدى\nيتم وضع الثدى بين رقاقتين من البلاستيك داخل جهاز الماموجرام \nيتم اجراء الاشعة لكلا الثديين \nيمكن ان تشعر  بعدم الراحة تجاه هذا الإجراء\nمن الافضل الذهاب لعمل الماموجرام بعد اليوم الثامن من انتهاء الدورة الشهرية.\n\n\n"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>