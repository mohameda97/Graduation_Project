<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="Name"
            />
        <EditText
            android:id="@+id/userPhoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/edit_color_draw"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="Password"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/userPhonePassword"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/edit_color_draw"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Your phone umber"
            android:digits="+- 0123456789"
            android:ems="10"
            android:inputType="phone"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/edit_color_draw"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/getVerificationCode"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorPrimaryBlue"
            android:textColor="#ffffff"
            android:onClick="getVerificationCode"
            android:text="get verification code" />
        <EditText
            android:id="@+id/verificationCode"
            android:layout_width="wrap_content"
            android:hint="Enter your code"
            android:digits="0123456789"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/edit_color_draw"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/btSignIn"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorPrimaryBlue"
            android:textColor="#ffffff"
            android:text="sign in" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:text="Already have account?"
                android:padding="10dp"/>
            <Button
                android:id="@+id/userPhoneLogin"
                android:text="login"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/colorPrimaryBlue"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>